env:
  node: true
  es6: true

rules:
  ## eslint:recommended
  no-cond-assign: 1
  no-constant-condition: 1
  no-control-regex: 1
  no-debugger: 1
  no-delete-var: 1
  no-dupe-args: 1
  no-dupe-keys: 1
  no-duplicate-case: 1
  no-empty-character-class: 1
  no-ex-assign: 1
  no-extra-boolean-cast: 1
  no-extra-semi: 1
  no-fallthrough: 1
  no-func-assign: 1
  no-inner-declarations: [2, functions]
  no-invalid-regexp: 1
  no-irregular-whitespace: 1
  no-mixed-spaces-and-tabs: [1, false]
  no-negated-in-lhs: 1
  no-obj-calls: 1
  no-octal: 1
  no-redeclare: 1
  no-regex-spaces: 1
  no-sparse-arrays: 1
  no-undef: 1
  no-unreachable: 1
  no-unused-vars: [1, {vars: "all", args: "none"}]
  use-isnan: 1
  valid-typeof: 1

  ## safety
  constructor-super: 1
  no-class-assign: 1
  no-const-assign: 1
  no-dupe-class-members: 1
  no-this-before-super: 1

  ## style
  camelcase: [1, properties: never]
  comma-dangle: [1, always-multiline]
  comma-spacing: [1, {before: false, after: true}]
  consistent-return: 1
  handle-callback-err: 1
  indent: [1, 2]
  key-spacing: 1
  new-cap: [1, capIsNew: false]
  no-caller: 1
  no-extend-native: 1
  no-extra-bind: 1
  no-multi-spaces: 1
  no-new-require: 1
  no-shadow: 1
  no-trailing-spaces: 1
  quotes: [1, single]
  semi-spacing: [1, {before: false, after: true}]
  semi: 1
  space-infix-ops: 1
  space-unary-ops: 1
  strict: [1, global]
